[Unit]
Description=Gamocosm Container %i
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/bin/podman start --attach %i
ExecStop=/usr/bin/podman stop --time 16 %i
RestartSec=1
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%i

[Install]
WantedBy=multi-user.target
